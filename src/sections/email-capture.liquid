<div class="email-capture" data-section-id="{{ section.id }}" data-section-type="email-capture" data-enable-history-state="true">
<div class="email-capture--cta">
  <form method="POST" action="//offhours.us16.list-manage.com/subscribe/post" novalidate="">
    <h2 class="headline-l small--hide">{{ section.settings.cta_headline_desktop }}</h2>
    <h2 class="headline-l medium-up--hide">{{ section.settings.cta_headline_mobile }}</h2>
    <hr>
    <p class="copy">{{ section.settings.cta_copy }}</p>
    <div class="email-capture--inputs">

      <input type="hidden" name="u" value="9b505723b04c893cb674ad3da">
      <input type="hidden" name="id" value="b1d1108c86">
      <input class="email-capture--email" placeholder="{{ section.settings.placeholder }}" type="email" value="" name="EMAIL" id="mce-EMAIL" />
      <button class="email-capture--submit" type="submit" >
        {% include 'submit-arrow' %}
      </button>
    </div>
    <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_9b505723b04c893cb674ad3da_b1d1108c86" tabindex="-1" value=""></div>
  </form>
  <div class="copy error-message"><small>Please check the email address you entered.</small></div>

</div>

<div class="email-capture--success">
  <h2 class="headline-l">{{ section.settings.confirmation_headline }}</h2>
  <hr>
  <p class="copy">{{ section.settings.confirmation_copy }}</p>
</div>
</div>

{% schema %}
  {
    "name": "Email Capture",
    "settings": [
      {
        "type": "header",
        "content": "Email Form"
      },
      {
        "type": "richtext",
        "id": "cta_headline_desktop",
        "label": "CTA Headline Desktop",
        "default": "<p>We started from scratch<br/>to reimagine everything<br/>a diaper could be.</p>"
      },
      {
        "type": "richtext",
        "id": "cta_headline_mobile",
        "label": "CTA Headline Mobile",
        "default": "<p>We started<br/>from scratch<br/>to reimagine<br/>everything a<br/>diaper could be.<p/>"
      },
      {
        "type": "textarea",
        "id": "cta_copy",
        "label": "CTA Copy",
        "default": "Stay tuned for launch updates and special offers."
      },
      {
        "type": "text",
        "id": "placeholder",
        "label": "Email Placeholder",
        "default": "Your email"
      },
      {
        "type": "header",
        "content": "Confirmation"
      },
      {
        "type": "textarea",
        "id": "confirmation_headline",
        "label": "Confirmation Headline",
        "default": "Thank you!"
      },
      {
        "type": "textarea",
        "id": "confirmation_copy",
        "label": "Confirmation Copy",
        "default": "Check your email for confirmation."
      }
    ]
  }

{% endschema %}