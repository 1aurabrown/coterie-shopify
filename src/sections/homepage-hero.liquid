<section data-section-id="{{ section.id }}" data-section-type="homepage-hero" class="homepage-hero__section">
  <div class="homepage-hero__image">
    {% include 'responsive-image', image: section.settings.mobile_image, wrapper_class: 'medium-up--hide' %}
    {% include 'responsive-image', image: section.settings.desktop_image, wrapper_class: 'small--hide' %}
  </div>
  <div class="homepage-hero__copy-container">
    <div class="homepage-hero__copy">

      <div class="homepage-hero__heading headline-l">
        {{ section.settings.heading }}
      </div>
      <div class="homepage-hero__subline copy-m">
        {{ section.settings.subline }}
      </div>
      <div class="homepage-hero__buttons copy-m">
        {% for block in section.blocks %}
          <button class="button button--black homepage-hero__button"><a href="{{ block.settings.url }}">
            {{ block.settings.label }}
          </a></button>
        {% endfor %}
      </div>
    </div>
  </div>
</section>


{% schema %}
  {
    "class": "homepage-hero",
    "name": "Hero",
    "max_blocks": 2,
    "blocks": [
      {
        "type": "button",
        "name": "CTA Button",
        "settings": [
          {
            "type": "text",
            "id": "label",
            "label": "Button Text"
          },
          {
            "type": "url",
            "id": "url",
            "label": "URL"
          }
        ]
      }
    ],
    "settings": [
      {
        "type": "image_picker",
        "id": "desktop_image",
        "label": "Desktop Image"
      },
      {
        "type": "image_picker",
        "id": "mobile_image",
        "label": "Mobile Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "default": "The Coterie Diaper"
      },
      {
        "type": "textarea",
        "id": "subline",
        "label": "Subline",
        "default": "A softer, safer and more absorbent diaper setting a new industry standard for quality."
      }
    ],
    "presets": [
      {
        "name": "Hero",
        "category": "Homepage"
      }
    ]
  }
{% endschema %}
